{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "compile",
      "type": "shell",
      "command": "gcc",
      "args": [
        "-g",
        "-I./include",
        "-L./lib",
        "src/main.c",
        "src/glad.c",
        "-lglfw3dll",
        "-lopengl32",
        "-o",
        "${workspaceFolder}\\bin\\main.exe",
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"],
      "detail": "Generated by VS Code."
    },
    {
      "label": "run",
      "type": "shell",
      "command": "${workspaceFolder}\\bin\\main.exe"
    },
  ]
}